<Window x:Class="Frontend.View.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Frontend.View"
        mc:Ignorable="d"
        Title="Login" MinHeight="300" MinWidth="400" Height="310" Width="440">
    <Viewbox>
        <Grid Width="145">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Margin="0,1,10,10" Grid.ColumnSpan="4" >
                <Label Content="Welcome" Height="26" Width="133" />
                <Grid Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Label Content="Email:" Grid.Row="0" Grid.Column="0" FontSize="16" />
                    <TextBox Grid.Row="0" Margin="5,5,-76,5" Text="{Binding Path=Email, Mode=OneWayToSource}" TextChanged="TextBox_TextChanged" Grid.Column="1" />
                    <Label Content="Password:" Grid.Row="1" Grid.Column="0" FontSize="16" />
                    <TextBox Grid.Row="1" Grid.Column="1" Margin="5,5,-76,5" Text="{Binding Path=Password, Mode=OneWayToSource}" />
                </Grid>
                <Button Content="Login" Width="86" Margin="0,10,0,0" Click="Login_Click" Height="21" FontSize="11" />
                <Label Margin="0,10,0,0" Content="{Binding Path=ErrorMessage, Mode=OneWay}" />
                <Button Content="Back" Width="100" Margin="0,10,0,0" Click="Back_Click" />
                <Label Margin="0,10,0,0" Content="{Binding Path=ErrorMessage, Mode=OneWay}" />
            </StackPanel>
        </Grid>
    </Viewbox>
</Window>