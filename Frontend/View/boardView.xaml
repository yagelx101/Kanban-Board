<Window x:Class="Frontend.View.boardView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="boardView" Height="600" Width="1000"
        MinHeight="400" MinWidth="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Label Grid.Row="0" Content="Welcome to the Board!" FontSize="24" FontWeight="Bold" HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Column="0"/>
            <TextBlock Text="{Binding Path=WelcomeMessage, Mode=OneTime}" FontSize="16" VerticalAlignment="Top" Margin="0,42,0,0" />
            <Button Content="Back" Width="80" Grid.Column="1" Click="Back_Click" Margin="10,10,0,10"/>
        </Grid>

        <TextBlock Grid.Row="2" Text="{Binding BoardMembersAsString}" FontSize="14" Foreground="DarkSlateGray" Margin="0,0,0,10"/>

        <Grid Grid.Row="3" Margin="0,0,0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Label Grid.Row="0" Content="Backlog" Grid.Column="0" FontSize="18" FontWeight="Bold" HorizontalContentAlignment="Center"/>
            <Label Grid.Row="0" Content="In Progress" Grid.Column="1" FontSize="18" FontWeight="Bold" HorizontalContentAlignment="Center"/>
            <Label Grid.Row="0" Content="Done" Grid.Column="2" FontSize="18" FontWeight="Bold" HorizontalContentAlignment="Center"/>
        </Grid>

        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Backlog -->
            <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding AllBacklogTask}" Height="390">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#FFF6F6F6" BorderBrush="Gray" BorderThickness="1" CornerRadius="8" Margin="10" Padding="8">
                                <StackPanel>
                                    <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="16"/>
                                    <TextBlock Text="{Binding Assignee, StringFormat='Assigned to: {0}'}" FontSize="12"/>
                                    <TextBlock Text="{Binding CreationTime, StringFormat='Created: {0:dd/MM/yyyy}'}" FontSize="12" Foreground="Gray"/>
                                    <TextBlock Text="{Binding DueDate, StringFormat='Due: {0:dd/MM/yyyy}'}" FontSize="12" Foreground="DarkRed"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- In Progress -->
            <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding AllInProgressTask}" Height="390">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#FFEFFAFD" BorderBrush="DarkGray" BorderThickness="1" CornerRadius="8" Margin="10" Padding="8">
                                <StackPanel>
                                    <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="16"/>
                                    <TextBlock Text="{Binding Assignee, StringFormat='Assigned to: {0}'}" FontSize="12"/>
                                    <TextBlock Text="{Binding CreationTime, StringFormat='Created: {0:dd/MM/yyyy}'}" FontSize="12" Foreground="Gray"/>
                                    <TextBlock Text="{Binding DueDate, StringFormat='Due: {0:dd/MM/yyyy}'}" FontSize="12" Foreground="DarkRed"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Done -->
            <ScrollViewer Grid.Column="2" VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding AllDoneTask}" Height="390">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#FFE8F6E8" BorderBrush="DarkGray" BorderThickness="1" CornerRadius="8" Margin="10" Padding="8">
                                <StackPanel>
                                    <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="16"/>
                                    <TextBlock Text="{Binding Assignee, StringFormat='Assigned to: {0}'}" FontSize="12"/>
                                    <TextBlock Text="{Binding CreationTime, StringFormat='Created: {0:dd/MM/yyyy}'}" FontSize="12" Foreground="Gray"/>
                                    <TextBlock Text="{Binding DueDate, StringFormat='Due: {0:dd/MM/yyyy}'}" FontSize="12" Foreground="DarkRed"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
