<Window x:Class="Frontend.View.UserBoards"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Frontend"
        mc:Ignorable="d"
        Title="UserBoards" MinHeight="450" MinWidth="500">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="ALL BOARDS:"
                   FontSize="36"
                   FontWeight="Bold"
                   Foreground="#FF2E53C8"
                   Margin="0,0,0,10"
                   HorizontalAlignment="Left"/>

        <TextBlock Text="{Binding WelcomeMessage, Mode=OneTime}"
                   FontSize="20"
                   FontWeight="Bold"
                   Grid.Row="1"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10"/>

        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Boards}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel HorizontalAlignment="Center" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <DataTemplate.Resources>
                            <Style x:Key="BoardBorderStyle" TargetType="Border">
                                <Setter Property="BorderBrush" Value="DarkGray"/>
                                <Setter Property="BorderThickness" Value="2"/>
                                <Setter Property="Background" Value="#FFEFEFEF"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                        <Setter Property="BorderBrush" Value="DarkRed"/>
                                        <Setter Property="BorderThickness" Value="3"/>
                                        <Setter Property="Background" Value="#DDE6F9"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataTemplate.Resources>

                        <Border Style="{StaticResource BoardBorderStyle}"
                        
                                CornerRadius="10"
                                Padding="10"
                                Margin="10"
                                Background="#FFEFEFEF"
                                MouseLeftButtonDown="BoardCard_MouseLeftButtonDown"
                                Tag="{Binding}">

                            <StackPanel>
                                <TextBlock Text="{Binding BoardName, StringFormat='Board name: {0}'}"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding BoardOwner, StringFormat='Board owner: {0}'}"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,20,0,0">
            <Button Content="CREATE BOARD"
                    Width="120"
                    Margin="10,0"
                    Padding="10,5"
                    Click="CreateBoard_Click"/>

            <Button Content="Back"
                    Width="100"
                    Margin="10,0"
                    Padding="10,5"
                    Click="Back_Click"/>

            <Button x:Name="DeleteButton"
                    Content="Delete Board"
                    Width="120"
                    Margin="10,0"
                    Padding="10,5"
                    Visibility="Collapsed"
                    Click="DeleteBoard_Click"/>
        </StackPanel>
    </Grid>
</Window>
